<h1>Edit Project</h1>
<% if current_user %>
<% if current_user.id == @project.user_id %>
<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id = "error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
        <% @project.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class = "field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class = "field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class = "field">
    <%= f.label :goal %>
    <%= f.number_field :goal %>
  </div>

  <div class = "field">
    <%= f.label :end_date %>
    <%= f.date_field :end_date %>
  </div>

  <div class="submit">
    <%= f.submit %>
  </div>

<% end %>
<% else %>
  <h3>You can only edit your own projects.</h3>
<% end %>
<% else %>
  <h3>You can only edit your own projects and must be logged in.</h3>
<% end %>

<%= link_to 'Back', project_path(@project) %>
